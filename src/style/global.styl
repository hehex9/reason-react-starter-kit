*, :before, :after
  padding 0
  margin 0
  box-sizing border-box

html
  font-family 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background-color #fafafa

.hairline::after
  content ' '
  position absolute
  pointer-events none
  box-sizing border-box
  top: -50%
  left: -50%
  right: -50%
  bottom: -50%
  transform: scale(0.5);
  border: 0 solid #eee;

.hairline-top::after
  border-top-width 1px